{
  "name": "eslint_prettier_test",
  "version": "1.0.0",
  "main": "index.js",
  "author": "mshimomura <mshimomura@fourmix.co.jp>",
  "license": "MIT",
  "scripts": {
    "format": "run-p lint:js:fix lint:css:fix",
    "lint:js": "eslint '*.{js,ts,jsx,tsx}'",
    "lint:js:fix": "eslint --fix '*.{js,ts,jsx,tsx}'",
    "lint:css": "prettier-stylelint-formatter '*.{css,scss}'",
    "lint:css:fix": "prettier-stylelint-formatter --quiet --write '*.{css,scss}'"
  },
  "husky": {
    "hooks": {
      "pre-commit": "echo 'from husky'"
    }
  },
  "lint-staged": {
    "*.{js,jsx}": "npm run lint:js:fix",
    "*.{css,scss}": "npm run lint:css:fix"
  },
  "devDependencies": {
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "4",
    "lint-staged": "^11.2.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.4.1",
    "prettier-stylelint-formatter": "^0.5.1-beta.2",
    "stylelint": "^13.13.1",
    "stylelint-config-prettier": "^9.0.2",
    "stylelint-config-standard": "^22.0.0",
    "stylelint-scss": "^3.21.0"
  }
}
